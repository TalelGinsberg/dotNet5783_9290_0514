<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Admin"
        xmlns:BO="clr-namespace:BO;assembly=BL"
        xmlns:converter="clr-namespace:PL.Converter"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        x:Class="PL.Admin.OrdersSimulator"
        mc:Ignorable="d"
        DataContext="{Binding lisOftOrders,RelativeSource={RelativeSource Self} }"
        Title="NTcars" Icon="..\pics\icon.jpg" Height="450" Width="800">
    <Window.Resources>
        <converter:StatusToPicPathForShippedConverter x:Key="statToPath"/>
        <Style x:Key="myTextBoxStyle"
           TargetType="TextBox">
            <Setter Property="FontSize"
              Value="36" />
            <Setter Property="FontFamily"
              Value="Rockwell Condensed" />
            <Setter Property="FontWeight"
              Value="Bold" />
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Background"
                    Value="black"/>
            <Setter Property="BorderThickness"
                    Value="0,0,0,1"/>
        </Style>
        <Style x:Key="myButtonStyle"
           TargetType="Button">
            <Setter Property="FontSize"
              Value="52" />
            <Setter Property="FontFamily"
              Value="Rockwell Condensed" />
            <Setter Property="FontWeight"
              Value="Bold" />
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Background"
                    Value="Black"/>
            <Setter Property="BorderThickness"
                    Value="0,0,0,0"/>
        </Style>
        <Style x:Key="myLabelStyle"
           TargetType="Label">
            <Setter Property="FontSize"
              Value="36" />
            <Setter Property="FontFamily"
              Value="Rockwell Condensed" />
            <Setter Property="FontWeight"
              Value="Bold" />
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Background"
                    Value="Black"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
        </Style>
    </Window.Resources>
    <Grid>
        <DataGrid Width="Auto" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="0,76,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="id"
                                    Binding="{Binding ID}" Header="ID" Width="Auto" >
                    <DataGridTextColumn.ElementStyle>
                    <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="36" />
                            <Setter Property="FontFamily" Value="Rockwell Condensed" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="black"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="CustomerName"
                                    Binding="{Binding CustomerName}" Header="Customer Name" Width="Auto"/>
                <DataGridTemplateColumn Header="Status" Width="30" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Status,Converter={StaticResource statToPath}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn x:Name="AmountOfItems"
                                    Binding="{Binding AmountOfItems}" Header="AmountOfItems" Width="Auto"/>
                <DataGridTextColumn x:Name="TotalPrice"
                                    Binding="{Binding TotalPrice}" Header="Total Price" Width="Auto"/>
                <DataGridTemplateColumn  Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar x:Name="progressBar" Minimum="0" Maximum="100" Value="75">
                                
                            </ProgressBar>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="start" Content="Start tracking" HorizontalAlignment="Left" Margin="299,32,0,0" VerticalAlignment="Top" Click="start_Click"/>
        <Button Name="stop" Content="Stop tracking"  HorizontalAlignment="Left" Margin="496,32,0,0" VerticalAlignment="Top" Click="stop_Click"/>


    </Grid>
</Window>
