<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Admin"
        xmlns:BO="clr-namespace:BO;assembly=BL"
        xmlns:converter="clr-namespace:PL.Converter"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        x:Class="PL.Admin.OrdersSimulator"
        mc:Ignorable="d"
        DataContext="{Binding lisOftOrders,RelativeSource={RelativeSource Self} }"
        Title="OrdersSimulator" Height="450" Width="800">
    <Window.Resources>
        <converter:StatusToPicPathForShippedConverter x:Key="aa"/>
        <converter:BoolToVisibilityConverter x:Key="boolToVis"/>
    </Window.Resources>
    <Grid>
        <DataGrid Width="Auto" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="0,76,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="id"
                                    
                                    Binding="{Binding ID}" Header="ID" Width="Auto" />
                <DataGridTextColumn x:Name="CustomerName"
                                    Binding="{Binding CustomerName}" Header="Customer Name" Width="Auto"/>
                <DataGridTextColumn x:Name="Status"
                                    Binding="{Binding Status}" Header="Status" Width="Auto"/>
                <DataGridTextColumn x:Name="AmountOfItems"
                                    Binding="{Binding AmountOfItems}" Header="AmountOfItems" Width="Auto"/>
                <DataGridTextColumn x:Name="TotalPrice"
                                    Binding="{Binding TotalPrice}" Header="Total Price" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="start" Content="Start tracking" HorizontalAlignment="Left" Margin="299,32,0,0" VerticalAlignment="Top" Click="start_Click"/>
        <Button Name="stop" Content="Stop tracking"  HorizontalAlignment="Left" Margin="496,32,0,0" VerticalAlignment="Top" Click="stop_Click"/>



    </Grid>
</Window>
