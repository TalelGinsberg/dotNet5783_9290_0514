<Window x:Class="PL.Orders.OrderInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Orders"
        mc:Ignorable="d"
        Title="OrderInfo" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="myTextBoxStyle"
           TargetType="TextBox">
            <Setter Property="FontSize"
              Value="20" />
            <Setter Property="FontFamily"
              Value="Rockwell Condensed" />
            <Setter Property="FontWeight"
              Value="Bold" />
            <Setter Property="Foreground"
                    Value="Black"/>
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="{x:Null}"/>
            <Setter Property="BorderThickness"
                    Value="0,0,0,0"/>
            <Setter Property="IsReadOnly"
                    Value="True"/>
        </Style>
        <Style x:Key="myButtonStyle"
           TargetType="Button">
            <Setter Property="FontSize"
              Value="36" />
            <Setter Property="FontFamily"
              Value="Rockwell Condensed" />
            <Setter Property="FontWeight"
              Value="Bold" />
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Background"
                    Value="Black"/>
        </Style>
        <Style x:Key="myLabelStyle"
           TargetType="Label">
            <Setter Property="FontSize"
              Value="20" />
            <Setter Property="FontFamily"
              Value="Rockwell Condensed" />
            <Setter Property="FontWeight"
              Value="Bold" />
            <Setter Property="Foreground"
                    Value="Black"/>
            <Setter Property="Background"
                    Value="White"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Label Content="LUXARY CAR DEALERSHIP" 
               HorizontalAlignment="Left" 
               Margin="0,-12,0,0" 
               VerticalAlignment="Top" 
               Background="Black"
               Foreground="White"
               Style="{StaticResource myLabelStyle}" 
               Grid.ColumnSpan="2" 
               Width="800" 
               HorizontalContentAlignment="Center"/>
        <Label Content="Product info for order number" 
               HorizontalAlignment="Left" 
               Margin="300,73,0,0" 
               VerticalAlignment="Top" 
               Style="{StaticResource myLabelStyle}" />
        <Image Source="..\pics\orderInfo.png" 
               HorizontalAlignment="Left" 
               Height="399" 
               VerticalAlignment="Top" 
               Width="288" 
               Margin="0,41,0,0"/>
        <TextBox Name="id" 
                 HorizontalAlignment="Left" 
                 Margin="602,73,0,0" 
                 TextWrapping="Wrap" 
                 Text="id" 
                 VerticalAlignment="Top" 
                 Style="{StaticResource myTextBoxStyle}" 
                 Width="163"/>
        <Label Content="Customer's name:" 
               HorizontalAlignment="Left" 
               Margin="300,107,0,0" 
               Style="{StaticResource myLabelStyle}" 
               VerticalAlignment="Top"/>
        <TextBox Name="name" 
                 HorizontalAlignment="Left" 
                 Margin="482,112,0,0" 
                 TextWrapping="Wrap" 
                 Text="name" 
                 VerticalAlignment="Top" 
                 Style="{StaticResource myTextBoxStyle}"
                 Width="188"/>
        <Label Content="Customer's address:" 
               HorizontalAlignment="Left" 
               Margin="300,139,0,0" 
               Style="{StaticResource myLabelStyle}"
               VerticalAlignment="Top"/>
        <TextBox Name="address" 
                 HorizontalAlignment="Left" 
                 Margin="502,144,0,0" 
                 TextWrapping="Wrap" 
                 Text="address" 
                 VerticalAlignment="Top" 
                 Style="{StaticResource myTextBoxStyle}"
                 Width="194"/>
        <Label Content="Customer's email:" 
               HorizontalAlignment="Left" 
               Margin="300,173,0,0" 
               Style="{StaticResource myLabelStyle}"
               VerticalAlignment="Top"/>
        <TextBox Name="email"
                 HorizontalAlignment="Left" 
                 Margin="481,178,0,0" 
                 TextWrapping="Wrap" 
                 Text="email" 
                 Style="{StaticResource myTextBoxStyle}"
                 VerticalAlignment="Top" Width="120"/>
        <Label Content="Date of order:" 
               HorizontalAlignment="Left" 
               Margin="300,206,0,0"
               Style="{StaticResource myLabelStyle}"
               VerticalAlignment="Top"/>
        <TextBox Name="orderDate"
                 HorizontalAlignment="Left" 
                 Margin="448,212,0,0" 
                 TextWrapping="Wrap" 
                 Text="orderDate" 
                 VerticalAlignment="Top" 
                 Style="{StaticResource myTextBoxStyle}"
                 Width="120"/>
        <Label Name="labelShipDate"
               Content="Date of shipment:" 
               HorizontalAlignment="Left" 
               Margin="300,240,0,0" 
               Style="{StaticResource myLabelStyle}"
               VerticalAlignment="Top"/>
        <TextBox Name="shipDate"
                 HorizontalAlignment="Left" 
                 Margin="477,245,0,0" 
                 TextWrapping="Wrap" 
                 Text="shipDate" 
                 VerticalAlignment="Top" 
                 Style="{StaticResource myTextBoxStyle}"
                 Width="120"/>
        <Label Name="labelArrivalDate" 
               Content="Date of arrival:" 
               HorizontalAlignment="Left" 
               Margin="300,274,0,0" 
               Style="{StaticResource myLabelStyle}"
               VerticalAlignment="Top"/>
        <TextBox Name="arrivalDate" 
                 HorizontalAlignment="Left" 
                 Margin="456,279,0,0" 
                 TextWrapping="Wrap" 
                 Text="arrivalDate" 
                 VerticalAlignment="Top" 
                 Style="{StaticResource myTextBoxStyle}"
                 Width="120"/>
        <Label Content="Status of order:" 
               HorizontalAlignment="Left" 
               Margin="300,308,0,0" 
               Style="{StaticResource myLabelStyle}"
               VerticalAlignment="Top"/>
        <TextBox Name="status" 
                 HorizontalAlignment="Left" 
                 Margin="456,313,0,0" 
                 TextWrapping="Wrap" 
                 Text="status" 
                 VerticalAlignment="Top" 
                 Style="{StaticResource myTextBoxStyle}"
                 Width="120"/>
        <Label Content="Total price of order:" 
               HorizontalAlignment="Left" 
               Margin="311,342,0,0" 
               Style="{StaticResource myLabelStyle}"
               VerticalAlignment="Top"/>
        <TextBox Name="totalPrice" 
                 HorizontalAlignment="Left" 
                 Margin="516,347,0,0" 
                 TextWrapping="Wrap" 
                 Text="totalPrice" 
                 VerticalAlignment="Top" 
                 Style="{StaticResource myTextBoxStyle}"
                 Width="120"/>







    </Grid>
</Window>
